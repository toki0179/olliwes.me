<!-- find out how long it took for the page to load -->
<script>
    window.onload = function() {
        var time = new Date().getTime() - window.performance.timing.navigationStart;
        // seconds and milliseconds
        var seconds = Math.floor(time / 1000);
        var milliseconds = time % 1000;
        // display the time
        document.getElementById("time").innerHTML = seconds + "." + milliseconds;
    }
    // array of funny quotes to be displayed on the page
    const allEmojis = ["😀","😁","😂","😃","😄","😅","😆","😇","😈","👿","😉","😊","☺️","😋","😌","😍","😎","😏","😐","😑","😒","😓","😔","😕","😖","😗","😘","😙","😚","😛","😜","😝","😞","😟","😠","😡","😢","😣","😤","😥","😦","😧","😨","😩","😪","😫","😬","😭","😮","😯","😰","😱","😲","😳","😴","😵","😶","😷","😸","😹","😺","😻","😼","😽","😾","😿","🙀"]
    // function to randomly select a quote from the array
    function getRandomEmoji() {
        return allEmojis[Math.floor(Math.random() * allEmojis.length)];
    }
    // function to display the quote on the page

    document.getElementById("emojis").innerHTML = `Backend Developer | ${getRandomEmoji()}${getRandomEmoji()}${getRandomEmoji()}`;
</script>


