    function getRandomEmoji() {
        return allEmojis[Math.floor(Math.random() * allEmojis.length)];
    }

    anime({
        targets: '#olliwes path',
        strokeDashoffset: [anime.setDashoffset, 0],
        easing: 'easeInOutSine',
        duration: 1500,
        delay: function(el, i) { return i * 250 },
        direction: 'alternate',
        loop: false
});

    document.getElementById("emojis").innerHTML = `Backend Developer | ${getRandomEmoji()}${getRandomEmoji()}${getRandomEmoji()}`;
</script>

